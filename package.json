{
  "name": "hexo-filter-post-identifier",
  "version": "0.1.1",
  "description": "Hexo plugin for adding a permanent link identifier.",
  "files": [
    "index.js",
    "lib"
  ],
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/*",
    "build": "lsc -co lib src",

    "test": "mocha --compilers ls:livescript",
    "watch": "mocha --watch -R min --compilers ls:livescript",

    "prepublish": "npm run prepublish:clean -s && npm run prepublish:build -s && npm run prepublish:test -s",
    "prepublish:clean": "chalk -t '{red ..} {cyan.bold Cleaning}'  && npm run clean -s",
    "prepublish:build": "chalk -t '{red ..} {cyan.bold Building}'  && npm run build -s",
    "prepublish:test": "chalk -t '{red ..} {cyan.bold Testing}' && mocha -R progress --compilers ls:livescript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Talljoe/hexo-filter-post-identifier.git"
  },
  "keywords": [
    "hexo",
    "filter"
  ],
  "author": "Joe Wasson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Talljoe/hexo-filter-post-identifier/issues"
  },
  "homepage": "https://github.com/Talljoe/hexo-filter-post-identifier#readme",
  "devDependencies": {
    "bluebird": "^3.4.7",
    "chai": "^3.5.0",
    "chai-sinon": "^2.8.1",
    "chalk-cli": "^3.0.0",
    "hexo": "^3.2.2",
    "livescript": "^1.5.0",
    "mocha": "^3.2.0",
    "moment": "^2.17.1",
    "sinon": "^1.17.7"
  }
}
